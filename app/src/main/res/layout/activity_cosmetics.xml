<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cosmetic.Cosmetics">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="Cosmetics"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="119dp">

        <Button
            android:id="@+id/btnCosmeticSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cosmetic Selection"
            android:backgroundTint="@color/btColorMain"/>

        <Button
            android:id="@+id/btnCosmeticShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cosmetic Shop"
            android:backgroundTint="@color/btColorMain"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>